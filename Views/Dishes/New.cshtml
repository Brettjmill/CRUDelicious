@model Dish

<h1>Add a new Dish!</h1>
<hr>
<div>
    <form asp-controller="Dishes" asp-action="Create" class="shadow p-3 rounded" method="POST">
    <div class="form-group">
      <label asp-for="ChefName"></label>
      <span asp-validation-for="ChefName" class="text-danger font-weight-bold"></span>
      <input asp-for="ChefName" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="DishName"></label>
      <span asp-validation-for="DishName" class="text-danger font-weight-bold"></span>
      <input asp-for="DishName" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="Calories"></label>
      <span asp-validation-for="Calories" class="text-danger font-weight-bold"></span>
      <input asp-for="Calories" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="Tastiness"></label>
      <span asp-validation-for="Tastiness" class="text-danger font-weight-bold"></span>
      <input asp-for="Tastiness" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="Description"></label>
      <span asp-validation-for="Description" class="text-danger font-weight-bold"></span>
      <textarea asp-for="Description" class="form-control" rows="8"></textarea>
    </div>

    <button class="btn btn-outline-success">Add Dish</button>
  </form>
</div>